root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120

[{*.bash,*.sh,*.zsh}]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
trim_trailing_whitespace = true
